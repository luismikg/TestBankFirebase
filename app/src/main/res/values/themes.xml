<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoriBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.StoriBank" parent="Base.Theme.StoriBank" />

    <style name="Title">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Body" parent="Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodySmallBold" parent="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyBold" parent="Body">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white_splash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/incross_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.StoriBank</item>
    </style>
</resources>